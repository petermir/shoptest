<%- include('../../shared/head', {pageTitle: prod.title}) %>
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/cart-management.js" defer></script>
</head>
<body>
    <%- include('../../shared/header') %>
    <main id="product-details">
        <header>
            <img src="<%= prod.imageUrl %>" alt="<%= prod.title %>">
            <div id="product-info">
                <!-- REMEMBER to escape user input -->
                <h1><%= prod.title %></h1>
                <h2><%= prod.category %></h2>
                <p><%= prod.price %></p>
                <button class="btn" data-productid="<%= prod.id %>" data-csrf="<%= locals.csrfToken %>">Add to Cart</button>
            </div>
        </header>
        <p id="product-description"><%= prod.description %></p>
    </main>
<%- include('../../shared/footer') %>